def change(money):
    # dp[i] = minimum coins to make amount i
    dp = [float('inf')] * (money + 1)
    dp[0] = 0  # 0 coins needed for amount 0

    coins = [1, 3, 4]

    for i in range(1, money + 1):
        for coin in coins:
            if i >= coin:
                dp[i] = min(dp[i], dp[i - coin] + 1)

    return dp[money]


if __name__ == '__main__':
    amount = int(input())
    print(change(amount))
