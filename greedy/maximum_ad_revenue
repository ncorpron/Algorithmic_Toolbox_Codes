
def max_dot_product(first_sequence, second_sequence):
    assert len(first_sequence) == len(second_sequence)
    assert len(first_sequence) <= 10 ** 3
    assert all(0 <= f <= 10 ** 5 for f in first_sequence)
    assert all(0 <= s <= 10 ** 5 for s in second_sequence)

    # Sort both sequences in descending order
    sorted_first = sorted(first_sequence, reverse=True)
    sorted_second = sorted(second_sequence, reverse=True)

    # Multiply pairwise and sum
    result = sum(f * s for f, s in zip(sorted_first, sorted_second))
    return result




if __name__ == '__main__':
    n = int(input())
    prices = list(map(int, input().split()))
    clicks = list(map(int, input().split()))
    assert len(prices) == len(clicks) == n
    print(max_dot_product(prices, clicks))
